<% if @image.errors.none? %>
  <%= turbo_stream.replace "__images-list" + "" do %>
  <%= render partial: "list", locals: {images: @images} %>
  <% end %>
  <% end %>
  <%= turbo_stream.replace "__image__image-new" do %>
  <% if @image.errors.none? %>
  <%= render partial: "new_button", locals: {} %>
  <% else %>
  <%= render partial: "new_form", locals: {image: @image} %>
  <% end %>
  <% end %>
  <%= turbo_stream.replace "flash_notices" do %>
  <%= render partial: "layouts/flash_notices" %>
  <% if @image.errors.any? %>
  <%= render partial: "errors", locals: {resource: @image} %>
  <% end %>
<% end %>
